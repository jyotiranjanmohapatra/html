/* For the temperature toggle switch*/
 
 .switch {
  position: relative;
  margin-top: 1px;	
  height: 30px;
  margin-top: 1px;
  margin-right: 130px;
  width: 103px;
  float: right;
  background: #2D3035;  
  border-radius: 3px;
  box-shadow: inset 0.1px 0.2px 5px black,0px 1px 1px #5D5D5B;
}

.switch-label {
  position: relative;
  z-index: 2;
  float: left;
  width: 50px;
  line-height: 30px;
  font-size: 14px;
  color: white;
  text-align: center;
  font-weight: bold;
  cursor: default;
}
.switch-label-off {
  padding-left: 1.5px;
}

.switch-label-on {
  padding-right: 1.5px;
}


.switch-input {
  display: none;
}
.switch-input:checked + .switch-label {
  font-weight: bold;
  color: white;   
  -webkit-transition: 0.15s ease-out;
  -moz-transition: 0.15s ease-out;
  -ms-transition: 0.15s ease-out;
  -o-transition: 0.15s ease-out;
  transition: 0.15s ease-out;  
}
.switch-input:checked + .switch-label-on ~ .switch-selection {
  left: 53px; 
}

.switch-selection {
  position: absolute;
  z-index: 1;
  top: 1px;
  left: 1px;
  display: block;
  width: 49px;
  height: 27px;
  border-radius: 3px;
  background-color: #25b0f3;
  background-color: #25b0f3;		
	box-shadow: inset 0px 2px 2px #96CEE8,0px 1px 1px #5D5D5B;
        background: -webkit-radial-gradient(#4DADD8, #25b0f3); 
		background: -o-radial-gradient(#4DADD8, #25b0f3);
		background: -moz-radial-gradient(#4DADD8, #25b0f3); 
		background: radial-gradient(#4DADD8, #25b0f3);
  -webkit-transition: all 0.2s ease-in-out;
	-moz-transition:    all 0.2s ease-in-out;
	-ms-transition:     all 0.2s ease-in-out;
	-o-transition:      all 0.2s ease-in-out;
	transition:         all 0.2s ease-in-out;
}
